generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
}

model Project {
  id            String    @id @default(cuid())
  name          String
  sourceUrl     String
  summary       String?
  language      String    @default("english")
  status        String    @default("completed")
  userId        String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  abstractions  Json?
  relationships Json?
  chapters      Chapter[]
  user          User      @relation(fields: [userId], references: [id])
}

model Chapter {
  id        String   @id @default(cuid())
  title     String
  content   String
  order     Int
  projectId String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id])
}
